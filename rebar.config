{erl_opts, [
    debug_info,
    warn_exported_vars,
    warn_unused_vars,
    warn_unused_import,
    nowarn_missing_spec,
    {d, 'VSN', 0.2}
]}.

{dialyzer, [
    {warnings, [
        unmatched_returns,
        underspecs,
        race_conditions,
        behaviours
    ]}
]}.

{xref_checks, [
    undefined_function_calls,
    locals_not_used,
    deprecated_function_calls
]}.

{pre_hooks, [
    {compile, "make src/purity_bifs.erl > /dev/null"}
]}.
